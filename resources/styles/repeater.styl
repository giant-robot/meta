.gnt-meta-repeater {
    border-collapse: separate;
    border-spacing: 0;

    &__rows {
        display table
        width 100%
        margin 0 0 12px
        //padding 0 32px
        background white
        border 1px solid #DDD
        box-sizing border-box
    }

    // Repeater rows.
    &__row {
        display table-row
        position relative
        background white

        &:first-of-type {
            counter-reset repeater_rows
        }

        & > .giant-field {
            border-top 1px solid #EEE
        }

        // Edge columns.
        &-handle,
        &-actions {
            background #f7f7f7
            border-top 1px solid #DDD
            display table-cell
            width 32px
            text-align center
            vertical-align middle
        }

        &-handle {
            left -32px
            border-right 1px solid #DDD
            cursor move

            &:before {
                counter-increment repeater_rows
                content counter(repeater_rows)
                color #999
            }
        }

        &-actions {
            border-left 1px solid #DDD

            &:hover {
                a {
                    display inline-block
                }
            }
        }

        &-insert,
        &-remove {
            width 18px
            height 18px
            line-height 19px
            background #FFF
            border 2px solid #999
            border-radius 20px
            cursor pointer
            font-family Dashicons
            font-size 14px
            text-align center
            color #777
            display none
        }

        &-insert:before {
            content "\f132"
            display block
            line-height 21px
            text-indent -1px
        }

        &-remove:before {
            content "\f158"
        }

        // During sorting.
        &.ui-sortable-helper {
            display table
            border 1px solid #CCC
            box-shadow 0 0 5px rgba(0,0,0,0.2)
        }
    }
}

// TABLE LAYOUT
.gnt-meta-repeater--table {

    .gnt-meta-repeater__row {

        & > .giant-field {
            display table-cell
            padding 10px
            border-left 1px solid #EEE
            vertical-align top
        }

        // Reset borders.
        &:nth-of-type(1) {

            .gnt-meta-repeater__row-handle,
            .gnt-meta-repeater__row-actions,
            & > .giant-field {
                border-top none
            }
        }

        .giant-field:nth-child(2) {
            border-left none
        }
    }
}

// LINES LAYOUT
.gnt-meta-repeater--lines {

    .gnt-meta-repeater__row {

        & > .giant-field {
            padding 10px
            vertical-align top
        }

        // Reset borders.
        &:nth-of-type(1) {

            .gnt-meta-repeater__row-handle,
            .gnt-meta-repeater__row-actions,
            & > .giant-field:nth-child(2) {
                border-top none
            }
        }
    }
}
